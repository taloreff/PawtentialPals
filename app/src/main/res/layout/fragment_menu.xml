<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="80dp"
    android:gravity="bottom|center_horizontal">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="end"
        android:src="@drawable/ic_profile"
        android:scaleType="centerCrop"
        android:layout_marginBottom="24dp"
        android:background="@drawable/circular_image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/my_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_posts"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="My Posts"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textColor="@color/purple_500"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:background="@drawable/navbar_item_background"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/find_adoption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_map"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="Find Adoption"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textColor="@color/purple_500"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:background="@drawable/navbar_item_background"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_user_placeholder"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="My Profile"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textColor="@color/purple_500"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:background="@drawable/navbar_item_background"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="Log Out"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textColor="@color/purple_500"
        android:background="@drawable/navbar_item_background"
        android:elevation="4dp"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>